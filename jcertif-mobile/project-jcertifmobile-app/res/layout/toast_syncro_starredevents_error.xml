<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_toast"
    android:orientation="horizontal"
    android:padding="@dimen/paddingLeft" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/marginBottom"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/text_toast_account"
        style="@style/txv_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SyncroNoUserErrorMessage" />

</LinearLayout>